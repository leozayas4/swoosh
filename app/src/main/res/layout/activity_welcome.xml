<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcome"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="269dp"
            android:layout_height="33dp" app:srcCompat="@drawable/swooshlogoblack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:id="@+id/imageView2"
            android:scaleType="fitCenter" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="267dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:fontFamily="@font/montserrat" android:textColor="@color/colorPrimary"
            android:textSize="46sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            android:textStyle="bold"
            android:textAlignment="center" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Find a team in your city and dominate the league"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:singleLine="false" android:textColor="@color/colorAccent"
            android:textSize="18sp" android:textAlignment="center" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textStyle="bold"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="394dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:textColor="@color/colorAccent" android:background="@drawable/swoosh_button"/>

</android.support.constraint.ConstraintLayout>